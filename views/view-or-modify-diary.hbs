<h2 id="diarytitle">{{diaryname}}</h2>
<h2>Click on a Date Below to View And/Or Modify Corresponding Entry</h2>
<ul>
	{{#each entries}}
		<li><a href="/myentries">{{this.date}}</a></li><!--for some reason i could not find a way to put diary's title in url idk-->
	{{/each}}
</ul>

<h2>Add new Entry</h2>
{{#if message}}
<div class="error">{{ message }}</div>
{{/if}}
<form method="POST" action="">
	<div>
		<label for="date">Date:</label>
		<input type="text" id="date" name="date" value="">
	</div>
    <div>
		<label for="title">Title:</label>
		<input type="text" id="title" name="title" value="">
	</div>
	<div>
		<label for="entry">Entry:</label>
		<textarea name="entry" id="entry"></textarea>
	</div>
	<input type="submit" value="Add">
</form>
