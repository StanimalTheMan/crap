{{#if diaries}}
    <h2>My Diaries</h2>
{{/if}}

{{#if user}}
    <ol class='listofdiaries'>
        {{#each diaries}}
            <li><a href="/mydiaries/{{slug}}">{{slug}}</a> - {{description}}</li>
        {{/each}}
    </ol>
{{else}}
	<p class="Users">Join the {{tot}} users who write diaries today!</p>
    <p class="Users">There are {{totd}} diaries since the dawn of this app...</p>
	<p class="Users">While not the best way to tell, {{started}} diaries have at least an entry and will have more to come.</p>
	<div class="homedefault">
		<h2 id="carouselheader">"Diaries can make a difference in your life"</h2>
			<div id="myCarousel" class="carousel slide" data-ride="carousel">
				<p data-target="#myCarousel" data-slide-to="0" class="active"></p>
				<p data-target="#myCarousel" data-slide-to="1"></p>
				<p data-target="#myCarousel" data-slide-to="2"></p>

			<!--Wrapper for slides with help from w3 schools-->
			<div class="carousel-inner">
				<div class="item active">
					<img src="/img/diaryhomepage2.jpg" alt="dailyhappywriting" style="width:100%">
				</div>
					<div class="item">
					<img src="/img/diaryhomepage1.jpeg" alt="diary" style="width:100%">
				</div>
					<div class="item">
					<img src="/img/diaryhomepag3.jpg" alt="diary1" style="width:100%">
				</div>
			</div>

			<!--Left and Right controls-->
			<a class="left carousel-control" href="#myCarousel" data-slide="prev">
				<span class="glyphhicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#myCarousel" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
{{/if}}